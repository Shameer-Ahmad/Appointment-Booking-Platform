{
    "compilerOptions": {
      "jsx": "preserve", 
      "allowJs": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "es6",
      "lib": ["dom", "es6"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
  }